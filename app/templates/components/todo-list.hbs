{{#if todos.length}}
  {{#if canToggle}}
    <input
      id="toggle-all"
      class="toggle-all"
      type="checkbox"
      checked={{this.allCompleted}}
      onchange={{action this.toggleAll}}
    >
    <label for="toggle-all">Mark all as complete</label>
  {{/if}}
  <ul class="todo-list">
    {{#each todos as |todo|}}
      <TodoItem
        @todo={{todo}}
        @onStartEdit={{action this.disableToggle}}
        @onEndEdit={{action this.enableToggle}}
      />
    {{/each}}
  </ul>
{{/if}}
